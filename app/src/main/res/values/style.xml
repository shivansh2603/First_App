<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundedButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>
        <item name="boxBackgroundColor">@android:color/black</item>
        <item name="hintTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CircularImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextInputEditTextBlack" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="TextInputLayoutStyle1" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>
        <item name="boxBackgroundColor">@color/silver</item>
    </style>
    <style name="DropdownItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextInputLayoutStyle1.ExposedDropdownMenu" parent="TextInputLayoutStyle">
        <item name="endIconMode">dropdown_menu</item>
    </style>
    <style name="BottomNavigationViewStyle" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@color/black</item>
        <item name="itemTextColor">@color/black</item>
        <item name="itemIconSize">32dp</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationViewTextAppearanceActive</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationViewTextAppearanceInactive</item>
    </style>

    <style name="BottomNavigationViewTextAppearanceActive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">14sp</item> </style>

    <style name="BottomNavigationViewTextAppearanceInactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>